/* pages/center/center.wxss */
.main {
  width: 750rpx;
  min-height: 570px;
  background-color: #F5F5F5;
}

image {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  height: 50px;
  padding: 10px;
}

.avatar,
.nickname {
  float: left;
}

.avatar {
  border: 1px solid #00CED1;
}

.avatar,
.avatar image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.nickname {
  height: 50px;
  line-height: 50px;
  text-indent: 0.5em;
  font-size: 14px;
}

.edit-avatar {
  float: right;
  width: 100px;
  height: 50px;
  line-height: 50px;
}



.icon {
  display: inline-block;
  width: 12.8px;
  height: 10px;
}

.gender {
  width: 12px;
  height: 12px;
}

.edit-btn {
  margin-top: 10px;
  right: 20px;
  border: none;
  font-size: 10px;
  height: 30px;
  width: 100%;
  padding: 10px 0;
  background-color: #F5F5F5AA;
  font-size: 10px;
}

.floor {
  background-color: #FAFAFA;
  width: 90%;
  margin: 10px auto;
  border-radius: 10px;
  padding: 10px;
}

.info {
  text-align: start;
}

.top {
  height: 30px;
}

.span {
  margin-left: 10px;
  float: left;
}

.span text {
  color: #000000;
  font-weight: bold;
}

.resume {
  width: 100%;
  text-indent: 0.7em;
}

.operator {
  text-align: center;
  justify-content: space-between;
}

.operator-btn {
  display: inline-block;
  background-color: #00CED1;
  color: #FFFFFF;
  width: 120px !important;
  margin: 0 15px !important;
}

.history {
  min-height: 60rpx;
  line-height: 60rpx;
  background-color: #FFFFFF;
  border-radius: 25rpx 25rpx 0 0;
}

.content {
  text-align: center;
  display: flex;
}

.card {
  width: 50%;
  padding: 5rpx;
}

.card text {
  font-size: 13px;
}

.active {
  width: auto;
  font-weight: bold;
  border-bottom: 2px solid #842dff;
}

.node-content {
  transition: ease-in;
}

.left-come {
  animation: left-come 400ms ease-in;
}

.right-come {
  animation: right-come 400ms ease-in;
}

@keyframes left-come {
  0% {
    transform: translateX(-100%);
  }
  100% {}
}

@keyframes right-come {
  0% {
    transform: translateX(100%);
  }
  100% {}
}

