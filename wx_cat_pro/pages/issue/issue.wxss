.editor {
  padding: 10rpx;
}

.editor textarea {
  text-indent: 0.5em;
}

.item {
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  text-align: start;
  background-color: #fff;
  box-shadow: 0 0 10px #ddd;
}

.pre-item {
  width: 100%;
  height: 100%;
}

.last {
  float: left;
  width: 100%;
  border-top: 1px solid #A5A5A5;
}

.submit {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}

.submit-btn {
  background-color: #00CED1;
}