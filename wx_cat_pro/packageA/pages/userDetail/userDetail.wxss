view {
  box-sizing: border-box;
}

.main {
  width: 750rpx;
  min-height: 100vh;
  background-color: #FEFEFE;
  background: linear-gradient(to bottom right, #66cccc, #fff, #01cece);
}

.head-floor {
  position: relative;
  width: 100%;
  height: 130rpx;
}

.head {
  position: absolute;
  top: 35%;
  left: 20%;
  width: 500rpx;
  height: 120rpx;
  display: flex;
  background-color: #FFFFFF;
  border-radius: 60rpx;
}

.avatar {
  width: 120rpx;
  box-shadow: 3px 3px 3px #343434;
  border-radius: 50%;
}

.avatar image {
  border-radius: 50%;
}

image {
  width: 100%;
  height: 100%;
}

.icon {
  width: 25rpx;
  height: 25rpx;
}

.gender {
  position: absolute;
  bottom: 0;
  left: 10%;
}

.gender image {
  box-shadow: 2px 2px 2px #343434;
  background-color: #ffffff;
  border-radius: 50%;
}

.line {
  border-top: 1px solid #adadadab;
}

.info {
  font-size: smaller;
  padding: 5rpx 10rpx;
}

.nickname {
  color: #00CED1;
  font-weight: bold;
}

.info-top {
  display: flex;
}

.span {
  height: 80rpx;
  line-height: 80rpx;
  font-style: oblique;
  font-size: 10px;
  margin: 0 10rpx;
  color: #343434;
}

.floor {
  margin-top: 70rpx;
  text-align: center;
}

.card {
  width: 80%;
  margin: auto;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 4px 4px 4px #343434;
  text-align: start;
  text-indent: 1em;
  font-size: smaller;
  border: 1px solid #dcdcdc;
}

.floor-content {
  margin-top: 15rpx;
  background-color: #FFFFFF;
}

.end {
  height: 120rpx;
  text-align: center;
  color: #b111d1;
}

.bottom {
  width: 100%;
  position: fixed;
  bottom: 5rpx;
  padding: 0 10rpx;
}

.span-item {
  margin: auto;
  width: 50%;
  height: 60rpx;
  padding: 10rpx 0;
  text-align: center;
  color: #00CED1;
  background-color: #FFFFFF;
  font-weight: bold;
  border-radius: 40rpx;
}