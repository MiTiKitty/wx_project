.main {
  width: 375px;
}

.banner {
  width: 100%;
  height: 280px;
}

image {
  width: 100%;
  height: 100%;
}

.detail-box {
  margin: 10rpx 0;
  padding: 5rpx 10rpx;
}

.line {
  padding: 0 10rpx;
}

.price {
  color: red;
  font-size: 20px;
}

.title {
  font-weight: bold;
}

.desc {
  text-indent: 0.6em;
  padding: 0 5rpx;
  font-size: 13px;
}

.span {
  display: inline-block;
  border-radius: 3px;
  padding: 2px 5px;
  margin: 2px 5px 0 5px;
  border: 1px solid #ccc;
  font-size: 10px;
  background-color: rgb(231, 231, 231);
  color: rgb(248, 16, 16);
}

.choice-box {
  width: 750rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}

.choice-box view {
  background-color: #ccc;
  width: 50%;
  transition: ease-in;
  animation-timing-function: 200ms;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  text-align: center;
  justify-content: space-between;
}

.span-item {
  padding: 5px;
  margin: 5px auto;
  margin-top: 0;
}

.btn-1 {
  border-radius: 20px;
  width: 200rpx;
  background-color: rgb(240, 142, 14);
  color: #FFFFFF;
}

.btn-2 {
  border-radius: 20px;
  width: 200rpx;
  background-color: rgb(240, 14, 14);
  color: #FFFFFF;
}

.active {
  font-weight: bold;
  color: rgb(255, 81, 0);
  border-bottom: 2px solid rgb(240, 14, 14);
}

.content-floor {
  margin-top: 15rpx;
  padding: 5rpx;
  padding-bottom: 100rpx;
}

.desc-item {
  margin: 10rpx;
  width: 80%;
  justify-content: center;
  align-items: center;
  margin: auto;
}

image {
  width: 100%;
  height: 100%;
}

.comment-item {
  margin: 10rpx 0;
}

.top {
  height: 60rpx;
  line-height: 60rpx;
}

.avatar {
  width: 60rpx;
  height: 100%;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar,
.nickname {
  float: left;
}

.creationTime {
  float: right;
  font-size: 10px;
  padding-right: 10rpx;
}

.img-floor {
  margin-top: 10rpx;
}

.img-floor image {
  margin: 20rpx;
  width: 200rpx;
  height: 200rpx;
}