/* pages/home/home.wxss */
.main {
  width: 375px;
  background-color: #f7eadc;
}

.banner {
  width: 100%;
  height: 150px;
}

image {
  width: 100%;
  height: 100%;
}

.hot-goods-floor {
  margin-top: 10px;
  width: 100%;
  text-align: center;
}

.good-item {
  height: 150px;
  background-color: #ffffff;
  border: 1px solid #3f3f3f;
}

.left-box,
.right-box {
  display: inline-block;
  height: 100%;
}

.left-box {
  width: 30%;
}

.right-box {
  width: 70%;
  float: right;
}

.line {
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: start;
}

.title {
  font-size: larger;
  font-weight: bold;
}

.price {
  font-size: 18px;
  color: red;
}

.goodcomment {
  font-style: oblique;
  font-weight: 600;
  font-size: small;
  color: #f17373;
}

.none-bottom-line {
  margin: 10px 0;
  text-align: center;
  height: 30px;
  line-height: 30px;
  background-color: #f4f4f4;
}

