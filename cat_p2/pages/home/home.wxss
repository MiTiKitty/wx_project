/* pages/home/home.wxss */
.main {
  width: 375px;
  background-color: #f7eadc;
}

.banner {
  width: 100%;
  height: 150px;
}

image {
  width: 100%;
  height: 100%;
}

.hot-category-floor {
  height: 250px;
  margin: 10px;
}

.category-floor {
  padding: 10px;
  border-radius: 5px;
  height: 250px;
  background: linear-gradient(to bottom, #ffc6c66c, #e5e5e56d);
}

.floor-top {
  text-align: start;
  height: 20px;
  line-height: 20px;
}

.hot-title {
  text-indent: 0.6em;
  font-weight: bolder;
  color: #4d4d4d;
  text-shadow: -1px 0 0 #e3e3e3;
}

.floor-content {
  height: 230px;
}

.floor-item {
  float: left;
}

.big {
  width: 120px;
  height: 210px;
}

.child {
  width: 215rpx;
  height: 105px;
}

.hot-goods-floor {
  margin-top: 30px;
  width: 100%;
  padding: 15rpx;
  text-align: center;
  column-count: 2;
  column-gap: 1rpx;
}

.good-item {
  width: 320rpx;
  height: 260px;
  margin: 8px 0;
  display: inline-block;
  background-color: rgb(255, 255, 255);
}

.good-item image {
  width: 100%;
  height: 70%;
}

.good-title {
  text-align: start;
  color: #4d4d4d;
  text-shadow: 1px 0 0 #e5e5e5;
  line-height: 30px;
  text-indent: 0.3em;
  padding: 5px;
  font-size: small;
  font-weight: 700;
}